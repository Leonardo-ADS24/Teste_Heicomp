<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TesteH.Pages.Login">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25"
        >
        <Label 
            Text="Bem-Vindo!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label
            Text="Agora ficou fácil acompanhar os dados da empresa em um só lugar."
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label
            Text="Explore e aproveite"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label
            Text="Bem-vindo de volta"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label
            Text="Faça login para acessar sua conta"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button
            Text="Continue com Google"
            Clicked="onButtonLoginClicked"
            BackgroundColor="LightBlue"
            TextColor="White"
            />
        <Label
            Text="@2025 Grupo Unis. Todos os direitos reservados."
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>